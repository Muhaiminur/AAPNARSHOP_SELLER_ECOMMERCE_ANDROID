<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp">

    <TextView
        android:id="@+id/recyclerview_comment_buyer_name"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight=".5"
        android:text="Buyer Name"
        android:textStyle="bold"
        android:textSize="@dimen/font_xl"
        android:textColor="@color/app_black1"
        android:layout_marginStart="10dp"/>

    <TextView
        android:id="@+id/recyclerview_comment_buyer_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:textSize="@dimen/font_l"
        android:text="Hello,Rating from buyer"
        android:textColor="@color/app_black1"/>


    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/app_white3"/>


</LinearLayout>
</layout>