<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="@color/app_white3"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/app_hint2" />

        <TextView
            android:id="@+id/recyclerView_report_title"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:text="@string/product_add"
            android:gravity="center"
            android:maxLines="2"
            android:textColor="@color/app_black1"
            android:textSize="@dimen/font_xl"
            android:textStyle="bold"/>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/app_hint2" />

        <TextView
            android:id="@+id/recyclerview_report_total_product"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="20"
            android:gravity="center"
            android:textStyle="bold"
            android:background="@drawable/yellow_background_capsul_shape_fill"
            android:paddingStart="15dp"
            android:paddingEnd="15dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:textColor="@color/app_black1"

            />


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/app_hint2" />

        <TextView
            android:id="@+id/recyclerview_report_amount"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:gravity="center"
            android:text="200 TK"
            android:textStyle="bold"
            android:textColor="@color/app_black1"/>


        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/app_hint2" />



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/app_white3" />

</LinearLayout>
</layout>