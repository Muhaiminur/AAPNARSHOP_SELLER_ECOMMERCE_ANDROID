<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="?actionBarSize"
    tools:context=".Fragment.Profile">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <FrameLayout
                android:id="@+id/profile_image_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                tools:ignore="UselessParent">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_profile"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="1dp" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:layout_gravity="bottom|right"
                    android:contentDescription="@string/camera_image"
                    android:background="@drawable/yellow_round_shape_fill"
                    android:src="@drawable/ic_profile_image_add"
                    tools:ignore="RtlHardcoded" />
            </FrameLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Md. Rahamat "
                android:textColor="@color/app_black1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="G tech joined 25 july 2020"
                android:textColor="@color/app_yellow"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_shop_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_name"
                    android:textColor="@color/app_black1"
                    android:textSize="@dimen/font_xxxl"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/colon"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_shop_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".6"
                    android:maxLines="2"
                    android:text="Rahamat General Store"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_web_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/web"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/colon"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_web_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".6"
                    android:text="No web address"
                    android:textColor="@color/app_black1"
                    android:textSize="@dimen/font_xxxl" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_shop_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/shop_type"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/colon"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_shop_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".6"
                    android:text="Grocery"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_address_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/address"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/colon"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".6"
                    android:maxLines="3"
                    android:text="Gulash-2,Dhaka"
                    android:textColor="@color/app_black1"
                    android:textSize="@dimen/font_xxxl" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_city_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/city"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/colon"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".6"
                    android:text="Dhaka"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="5dp"
                android:weightSum="3"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/profile_area_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/area"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.4"
                    android:gravity="center"
                    android:text="@string/colon"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/profile_area"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_weight=".6"
                    android:text="Gulshan"
                    android:textColor="@color/app_black1"
                    android:textSize="16sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/profile_private_info_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:text="@string/private_information"
                android:textColor="@color/app_black1"
                android:textSize="@dimen/font_xxxl"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/yellow_round_shape_fill"
                    android:padding="10dp"
                    android:src="@drawable/ic_email"/>

                <TextView
                    android:id="@+id/profile_seller_email_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawablePadding="10dp"
                    android:text="rahamat@gamil.com"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/app_black1"
                    android:textSize="@dimen/font_xl"/>

                
            </LinearLayout>


           

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/yellow_round_shape_fill"
                    android:padding="10dp"
                    android:src="@drawable/ic_phone"/>

                <TextView
                    android:id="@+id/profile_seller_mobile_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:drawablePadding="10dp"
                    android:layout_marginStart="10dp"
                    android:text="01761777777"
                    android:textColor="@color/app_black1"
                    android:textSize="@dimen/font_xl"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
</layout>