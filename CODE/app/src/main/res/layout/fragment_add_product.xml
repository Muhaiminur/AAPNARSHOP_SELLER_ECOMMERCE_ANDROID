<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="?actionBarSize"
        android:orientation="vertical"
        tools:context=".Fragment.product.AddProduct">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/add_product_category_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/category"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/add_product_category_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_spinner"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:hint="Type category"
                    android:textAlignment="center"
                    android:textSize="@dimen/font_xl" />

                <TextView
                    android:id="@+id/add_product_product_type_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/product_type"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/add_product_productType_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_spinner"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:hint="Type product type"
                    android:textSize="@dimen/font_xl"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/add_product_brand_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/brand"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/add_product_brand_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_spinner"
                    android:gravity="center"
                    android:imeOptions="actionNext"
                    android:hint="Type brand name"
                    android:textSize="@dimen/font_xl"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/add_product_supplier_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/supplier"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <androidx.appcompat.widget.AppCompatAutoCompleteTextView
                    android:id="@+id/add_product_supplier_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/custome_spinner"
                    android:gravity="center"
                    android:imeOptions="actionDone"
                    android:hint="Type supplier name"
                    android:textSize="@dimen/font_xl"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/add_product_product_name_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/product_name"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/add_product_product_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/app_hint2"
                    android:inputType="text"
                    android:textSize="@dimen/font_xl"
                    android:imeOptions="actionNext"
                    android:hint="Write product name"
                    tools:ignore="Autofill,TextFields,UnusedAttribute" />

                <TextView
                    android:id="@+id/add_product_product_size_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/product_size"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />


                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/add_product_product_size_dropdown"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginTop="5dp"
                    android:background="@drawable/ash_background_rectangle_shape_stoke"
                    android:gravity="center"
                    android:inputType="text"
                    android:imeOptions="actionNext"
                    android:hint="@string/write_product_size"
                    android:textSize="@dimen/font_xl"
                    android:textAlignment="center" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:weightSum="2">


                    <LinearLayout
                        android:id="@+id/unit_size_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_product_unit_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/unit_size"
                            android:textSize="@dimen/font_xl"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <androidx.appcompat.widget.AppCompatEditText
                                android:id="@+id/add_product_unit_et"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1.5"
                                android:background="@drawable/left_half_round_stoke_ash"
                                android:gravity="center"
                                android:inputType="numberDecimal"
                                android:textSize="@dimen/font_xl"
                                tools:ignore="Autofill,LabelFor,TextFields" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/add_product_unit_dropdown"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="5dp"
                                android:paddingTop="2dp"
                                android:layout_weight=".5"
                                android:background="@drawable/right_half_capsul_spinner"
                                android:textAlignment="center" />


                        </LinearLayout>

                        <TextView
                            android:id="@+id/add_product_unit_error"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:text="Enter unit quantity"
                            android:textColor="@color/deep_red"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/add_product_weight_of_unit_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:visibility="gone"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/add_product_weight_of_unit_tv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="@string/weight_of_the_unit"
                            android:textSize="@dimen/font_xl"
                            android:textStyle="bold" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <EditText
                                android:id="@+id/add_product_weight_unit"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight="1.5"
                                android:background="@drawable/left_half_round_stoke_ash"
                                android:gravity="center"
                                android:inputType="number"
                                android:textSize="@dimen/font_xl"
                                tools:ignore="Autofill,LabelFor,TextFields" />

                            <androidx.appcompat.widget.AppCompatSpinner
                                android:id="@+id/add_product_weight_unit_dropdown"
                                android:layout_width="80dp"
                                android:layout_height="30dp"
                                android:layout_marginTop="10dp"
                                android:layout_weight=".5"
                                android:background="@drawable/right_half_capsul_spinner"
                                android:textAlignment="center" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/add_product_retail_sell_price_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/retail_sell_price_per_unit"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_product_retail_sell_price"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_hint2"
                        android:inputType="number"
                        android:textSize="@dimen/font_xl"
                        tools:ignore="Autofill,LabelFor,TextFields,UnusedAttribute" />

                    <TextView
                        android:id="@+id/add_product_tk_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tk"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xxxl"
                        android:textStyle="bold" />
                </LinearLayout>


                <TextView
                    android:id="@+id/add_product_total_quantity_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_quantity"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/total_quantity"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:backgroundTint="@color/app_hint2"
                    android:inputType="number"
                    android:textSize="@dimen/font_xl"
                    tools:ignore="Autofill,LabelFor,TextFields,UnusedAttribute" />

                <TextView
                    android:id="@+id/add_product_total_price_wholesell_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/total_price_wholesale"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/add_product_total_price_wholesell"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/app_hint2"
                        android:inputType="number"
                        android:textSize="@dimen/font_xl"
                        tools:ignore="Autofill,LabelFor,TextFields,UnusedAttribute" />

                    <TextView
                        android:id="@+id/add_product_tk_tv_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="5dp"
                        android:layout_marginTop="10dp"
                        android:text="@string/tk"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xxxl"
                        android:textStyle="bold" />
                </LinearLayout>

                <TextView
                    android:id="@+id/add_product_product_details_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="@string/product_details"
                    android:textSize="@dimen/font_xl"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/add_product_product_details"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/ash_background_rectangle_shape_stoke"
                    android:gravity="center"
                    android:hint="@string/product_details"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textSize="@dimen/font_xl"
                    tools:ignore="Autofill" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/border_ash"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            tools:ignore="UseCompoundDrawables">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="20dp"
                                android:background="@drawable/border_ash"
                                android:orientation="vertical"
                                android:padding="10dp">

                                <ImageView
                                    android:id="@+id/add_product_gallery"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"
                                    android:background="@drawable/yellow_round_shape_fill"
                                    android:contentDescription="@string/gallery_image"
                                    android:padding="10dp"
                                    android:src="@drawable/ic_gallery"
                                    app:tint="@color/app_black1" />
                            </LinearLayout>


                            <TextView
                                android:id="@+id/add_product_browse"
                                android:layout_width="65dp"
                                android:layout_height="25dp"
                                android:layout_marginStart="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_marginEnd="10dp"
                                android:layout_marginBottom="20dp"
                                android:background="@drawable/ash_background_rectangle_shape_stoke"
                                android:gravity="center"
                                android:text="@string/browse"
                                android:textSize="14sp"
                                android:textStyle="bold" />
                        </LinearLayout>


                        <ImageView
                            android:id="@+id/add_product_camera"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_marginStart="5dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginEnd="5dp"
                            android:background="@drawable/yellow_round_shape_fill"
                            android:contentDescription="@string/gallery_image"
                            android:padding="10dp"
                            android:src="@drawable/ic_photo_camera"
                            app:tint="@color/app_black1" />

                    </LinearLayout>


                    <View
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"
                        android:background="@color/app_hint2" />


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center">

                        <ImageView
                            android:id="@+id/add_product_back_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_centerVertical="true"
                            android:layout_marginStart="2dp"
                            android:background="?selectableItemBackgroundBorderless"
                            android:contentDescription="@string/back_arrow"
                            android:src="@drawable/ic_baseline_arrow_back_ios_24"
                            app:tint="@color/app_hint2" />


                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/add_product_product_image_recyclerview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_toStartOf="@+id/add_product_forward_arrow"
                            android:layout_toEndOf="@id/add_product_back_arrow"
                            android:orientation="horizontal" />

                        <ImageView
                            android:id="@+id/add_product_forward_arrow"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:background="?selectableItemBackgroundBorderless"
                            android:contentDescription="@string/forward_arrow"
                            android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                            app:tint="@color/app_hint2" />
                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="20dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/update"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:layout_marginEnd="10dp"
                        android:background="@drawable/yellow_background_capsul_shape_fill"
                        android:gravity="center"
                        android:text="@string/update"
                        android:textColor="@color/app_black1"
                        android:textSize="@dimen/font_xl"
                        android:textStyle="bold"
                        tools:ignore="UnusedAttribute" />

                    <TextView
                        android:id="@+id/cancel"
                        android:layout_width="100dp"
                        android:layout_height="35dp"
                        android:background="@drawable/red_background_capsul_shape_fill"
                        android:gravity="center"
                        android:text="@string/cancel"
                        android:textColor="@color/app_white1"
                        android:textSize="@dimen/font_xl"
                        android:textStyle="bold"
                        tools:ignore="UnusedAttribute" />


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</layout>